    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/flashy/flashy.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args": [
                "COM3",
                "blink/kernel7.hex",
                "--reboot:ccw_tada",
                "--flashBaud:2000000",
                "--nogo",
                "--stress:10"
            ],
            "console": "integratedTerminal"
        }
    ]
}